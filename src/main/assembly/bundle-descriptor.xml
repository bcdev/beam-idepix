                    <defaultWeightCoeff>1.0</defaultWeightCoeff>
                </outputVariable>

                <outputVariable>
                    <name>l1_flags</name>
                </outputVariable>
                <outputVariable>
                    <name>cloud_classif_flags</name>
                </outputVariable>
            </outputVariables>

